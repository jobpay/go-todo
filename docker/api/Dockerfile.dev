FROM golang:1.22-alpine

WORKDIR /app

# 必要なツールをインストール
RUN apk add --no-cache git curl

# Airをインストール（ホットリロード用）
RUN go install github.com/air-verse/air@v1.52.3

# 依存関係をキャッシュ
COPY go.mod go.sum ./
RUN go mod download

# ソースコードはボリュームマウントで提供されるため、ここではコピーしない

EXPOSE 8080

CMD ["air", "-c", ".air.toml"]


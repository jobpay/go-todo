# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=todo_app

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-secret-key-min-32-characters-long-please-change-this
JWT_ACCESS_TOKEN_EXPIRES=15m
JWT_REFRESH_TOKEN_EXPIRES=7d

# Email Configuration (Resend)
RESEND_API_KEY=re_your_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRES=5m
OTP_RATE_LIMIT=1m
OTP_MAX_ATTEMPTS=3
OTP_LOCK_DURATION=5m

# Application
APP_ENV=development
APP_PORT=8080
